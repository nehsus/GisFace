        <TextView
            android:id="@+id/points_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="Points"
            android:textColor="#fff"
            android:textSize="28sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/recording"
            android:gravity="center"
            android:text="@string/stop"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/speed_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:text="0 kmph"
            android:textAppearance="@*android:style/TextAppearance.Material.Widget.Button.Borderless.Colored"
            android:textSize="24sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/descy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:paddingRight="20dp"
            android:text="0 kmph"
            android:textAppearance="@*android:style/TextAppearance.Material.DatePicker.YearLabel"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:contentDescription="@string/description_info"
            android:padding="20dp"
            android:src="@drawable/ic_action_info"
            android:visibility="gone" />
    </LinearLayout>


