<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_designs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cornor_layout"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_splash" />

        <TextView
            android:id="@+id/points_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Points"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/time_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Time"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/distance_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Distance"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/fileName_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="File Name"
            android:textColor="#fff"
            android:textSize="18sp" />
        <Button
            android:id="@+id/ok_btn_video"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok??"/>
    </LinearLayout>
</RelativeLayout>
